{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "environment": {
      "REACT_APP_FIREBASE_API_KEY": "${react.app.firebase_api_key}",
      "REACT_APP_FIREBASE_AUTH_DOMAIN": "${react.app.firebase_auth_domain}",
      "REACT_APP_FIREBASE_PROJECT_ID": "${react.app.firebase_project_id}",
      "REACT_APP_FIREBASE_STORAGE_BUCKET": "${react.app.firebase_storage_bucket}",
      "REACT_APP_FIREBASE_MESSAGING_SENDER_ID": "${react.app.firebase_messaging_sender_id}",
      "REACT_APP_FIREBASE_APP_ID": "${react.app.firebase_app_id}"
    }
  }
}
